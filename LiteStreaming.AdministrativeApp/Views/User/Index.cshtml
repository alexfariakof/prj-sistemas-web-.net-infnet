@using Application.Administrative.Dto
@model IEnumerable<AdminAccountDto>
@{
    ViewData["Title"] = "User";
}
@if (ViewBag.Alert != null)
{
    <partial name="Alert" model="(AlertViewModel)ViewBag.Alert" />
}

@if (!User.IsInRole("Admin"))
{
    <p style="color: red;">Usuário sem permissão de acesso.</p>
    <div style="display:block; position:absolute; height:100%; width:100%;"></div>

}
<a type="button" class="btn btn-primary mb-2" role="button" asp-controller="User" asp-action="Create">
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-circle" viewBox="0 0 16 16">
        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16" />
        <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4" />
    </svg>
    Adicionar Usuário
</a>
<div class="text-center border border-2 border-dark rounded-2">
    <table class="table table-striped table-dark mb-0">
        <thead>
            <tr>
                <th scope="col" class="visually-hidden">Id</th>
                <th scope="col" class="text-start">
                    <a asp-action="Index" asp-route-sortExpression="@(ViewData["SortParamName"].ToString().Replace("_desc", "") !="name" ? "name_desc" : ViewData["SortParamName"])">
                        <i class="@(ViewData["SortParamName"].ToString().Replace("_desc", "") == "name" ? ViewData["SortIcon"] : "bi bi-sort-alpha-up")">Nome</i>
                    </a>
                </th>
                <th scope="col" class="text-start">
                    <a asp-action="Index" asp-route-sortExpression="@(ViewData["SortParamName"].ToString().Replace("_desc", "") != "email" ? "email_desc" : ViewData["SortParamName"])">
                        <i class="@(ViewData["SortParamName"].ToString().Replace("_desc", "") == "email" ? ViewData["SortIcon"] : "bi bi-sort-alpha-up")">Email</i>
                    </a>
                </th>
                <th scope="col" class="text-start">
                    <a asp-action="Index" asp-route-sortExpression="@(ViewData["SortParamName"].ToString().Replace("_desc", "") !="description" ? "description_desc" : ViewData["SortParamName"])">
                        <i class="@(ViewData["SortParamName"].ToString().Replace("_desc", "") == "description" ? ViewData["SortIcon"] : "bi bi-sort-alpha-up")">Perfil</i>
                    </a>
                </th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        @if (User.IsInRole("Admin"))
        {
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="visually-hidden">@item.Id</td>
                        <td class="text-start">@item.Name</td>
                        <td class="text-start">@item.Email</td>
                        <td class="text-start">@item.PerfilType</td>
                        <td class=" w-auto text-center">
                            <a type="button" class="btn btn-outline-warning rounded-circle p-2 border border-2 border-secondary" data-toggle="tooltip" data-placement="bottom" title="Editar usuário" href="@Url.Action("Edit", "User", new { Id = item.Id })">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                    <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                    <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z" />
                                </svg>
                            </a>
                            <a type="button" class="btn btn-outline-danger rounded-circle p-2 border border-2 border-secondary" data-toggle="tooltip" data-placement="bottom" title="Excluir usuário" href="@Url.Action("Delete", "User", item)">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z" />
                                    <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z" />
                                </svg>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        }
    </table>
</div>
